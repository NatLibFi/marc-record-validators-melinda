{
	"name": "@natlibfi/marc-record-validators-melinda",
	"description": "MARC record validators used in Melinda",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/marc-record-validators-melinda",
	"bugs": {
		"url": "https://github.com/natlibfi/marc-record-validators-melinda/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/marc-record-validators-melinda.git"
	},
	"license": "LGPL-3.0+",
	"version": "7.0.4",
	"main": "./dist/index.js",
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"prepare": "npm run build",
		"check-deps": "npm-check;exit 0",
		"lint": "eslint --fix src",
		"test:unit:base": "cross-env NODE_ENV=test nyc -x test-fixtures -x src/**/*.spec.js mocha --require @babel/register",
		"test:unit": "npm run test:unit:base -- src/**/*.spec.js",
		"test": "npm run lint && npm run test:unit && npm run coverage",
		"clean": "rimraf build dist",
		"coverage": "nyc check-coverage --per-file",
		"build": "babel src --source-maps --out-dir=dist",
		"build:dev": "npm run clean && npm run build:dev && npm run check-deps",
		"watch": "cross-env DEBUG=1 NODE_ENV=test chokidar src -c 'npm test && npm run coverage'",
		"watch:validator": "cross-env DEBUG=1 NODE_ENV=test chokidar src/$VALIDATOR.js src/$VALIDATOR.spec.js -c 'npm run lint src/$VALIDATOR.js src/$VALIDATOR.spec.js && npm run test:unit:base --  src/$VALIDATOR.spec.js && npm run coverage'"
	},
	"dependencies": {
		"@babel/register": "^7.0.0",
		"@natlibfi/marc-record": "^4.0.4",
		"beautify-isbn": "^2.2.0",
		"cld3-asm": "^1.0.1",
		"issn-verify": "^1.0.0",
		"langs": "^2.0.0",
		"lodash": "^4.17.11",
		"node-fetch": "^2.3.0",
		"xml2js": ">=0.4.19 <1.0.0"
	},
	"peerDependencies": {
		"@natlibfi/marc-record-validate": "^5.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.0",
		"@babel/core": "^7.2.0",
		"@babel/preset-env": "^7.2.0",
		"babel-eslint": "^10.0.1",
		"babel-plugin-istanbul": "^5.1.4",
		"babel-plugin-rewire": "^1.2.0",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"chokidar-cli": "^1.2.0",
		"codeclimate-test-reporter": "^0.5.1",
		"cross-env": "^5.1.1",
		"eslint": "^6.5.1",
		"eslint-config-xo": ">=0.25.1 <1.0.0",
		"eslint-plugin-import": "^2.16.0",
		"fetch-mock": "^7.3.0",
		"mocha": "^6.0.2",
		"npm-check": "^5.9.0",
		"nyc": "^14.1.1",
		"rimraf": "^2.6.3"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		},
		"env": {
			"mocha": true
		}
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "8"
					}
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"rewire"
				]
			}
		}
	},
	"nyc": {
		"reporter": [
			"lcov",
			"html"
		],
		"require": [
			"@babel/register"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	}
}
