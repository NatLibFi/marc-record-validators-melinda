{
  "name": "@natlibfi/marc-record-validators-melinda",
  "description": "MARC record validators used in Melinda",
  "author": {
    "name": "The National Library of Finland"
  },
  "keywords": [],
  "homepage": "https://github.com/natlibfi/marc-record-validators-melinda",
  "bugs": {
    "url": "https://github.com/natlibfi/marc-record-validators-melinda/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:natlibfi/marc-record-validators-melinda.git"
  },
  "license": "MIT",
  "version": "11.5.5",
  "main": "./dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "babel ./src --source-maps --copy-files --delete-dir-on-start --out-dir=dist",
    "lint": "eslint ./src",
    "lint:dev": "eslint --fix ./src",
    "test": "npm run lint && npm run test:base",
    "test:base": "cross-env NODE_ENV=test nyc mocha",
    "test:dev": "npm run lint:dev && cross-env NODE_ENV=test nyc mocha",
    "dev": "nodemon",
    "dev:debug": "cross-env LOG_LEVEL=debug DEBUG=@natlibfi/* NODE_ENV=test nodemon",
    "coverage": "npm run cover:unit && npm run cover:report",
    "cover:unit": "nyc --silent npm run test:base",
    "cover:report": "nyc report"
  },
  "comment-sfs4900": "Package sfs-4900 npm version is 1.1.0, github 1.1.3.",
  "dependencies": {
    "@natlibfi/issn-verify": "^1.0.6",
    "@natlibfi/marc-record": "^9.1.4",
    "@natlibfi/marc-record-serializers": "^10.1.5",
    "@natlibfi/marc-record-validate": "^8.0.12",
    "@natlibfi/melinda-commons": "^13.0.19",
    "@natlibfi/sru-client": "^6.0.18",
    "@natlibfi/sfs-4900": "github:NatLibFi/sfs-4900",
    "cld3-asm": "^4.0.0",
    "clone": "^2.1.2",
    "debug": "^4.4.0",
    "isbn3": "^1.2.8",
    "iso9_1995": "^0.0.2",
    "langs": "^2.0.0",
    "node-fetch": "^2.7.0",
    "xml2js": "^0.6.2",
    "xregexp": "^5.1.2"
  },
  "peerDependencies": {
    "@natlibfi/marc-record-validate": "^8.0.12"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.0",
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/register": "^7.25.9",
    "@babel/runtime": "^7.27.0",
    "@natlibfi/eslint-config-melinda-backend": "^3.0.5",
    "@natlibfi/fixugen": "^2.0.13",
    "@natlibfi/fixura": "^3.0.12",
    "babel-plugin-istanbul": "^7.0.0",
    "babel-plugin-rewire": "^1.2.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "fetch-mock": "^11.1.5",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0"
  },
  "overrides": {
    "nanoid": "^3.3.8"
  },
  "nvolkComment": "cld3-asm 4.0.0 uses emscripten-wasm-loader ^3.0.3 which uses problematic, non-secure nanoid version 2.X.X",
  "eslintConfig": {
    "extends": [
      "@natlibfi/melinda-backend"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "maintained node versions"
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "rewire",
          "istanbul"
        ]
      }
    }
  },
  "mocha": {
    "spec": [
      "src/*.spec.js",
      "src/**/*.spec.js"
    ],
    "require": [
      "@babel/register"
    ],
    "inline-diffs": true,
    "maxDiffSize": 25000,
    "bail": true,
    "exit": true
  },
  "nodemonConfig": {
    "exec": "npm run test:dev",
    "watch": [
      "src/*",
      "test-fixtures/*"
    ]
  },
  "nyc": {
    "exclude": [
      "src/*.spec.js",
      "src/**/*.spec.js"
    ],
    "reporter": [
      "text"
    ],
    "sourceMap": false,
    "instrument": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80
  }
}
