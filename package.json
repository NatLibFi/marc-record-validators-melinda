{
  "name": "marc-record-validators-melinda",
  "description": "Melinda-related validators for marc-record-validate",
  "author": {
    "name": "The National Library of Finland"
  },
  "keywords": [
    "marc",
    "record",
    "validate",
    "validation",
    "library",
    "libraries",
    "bibliography",
    "bibliographic",
    "cataloguing",
    "melinda",
    "union catalog",
    "national library",
    "finland"
  ],
  "homepage": "https://github.com/NatLibFi/marc-record-validators-melinda",
  "bugs": {
    "url": "https://github.com/NatLibFi/marc-record-validators-melinda/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:NatLibFi/marc-record-validators-melinda.git"
  },
  "license": " AGPL-3.0+",
  "version": "1.0.0",
  "main": "./lib/main",
  "scripts": {
    "lint": "jshint .",
    "test-nodejs": "istanbul cover --dir coverage/nodejs _mocha -- test/validators/*.spec.js test/validators/nodejs/*.spec.js",
    "test-browser": "npm run generate-requirejs-config && karma start",
    "cover-nodejs": "npm run test-nodejs && istanbul check-coverage coverage/nodejs/coverage.json",
    "cover-browser": "npm run test-browser && istanbul check-coverage coverage/browser/coverage-final.json",
    "cover": "npm run test && npm run combine-coverage && istanbul check-coverage coverage/combined/coverage-final.json",
    "test": "npm run test-nodejs && npm run test-browser",
    "cover": "npm run test && istanbul check-coverage",
    "check": "npm run lint && npm run cover",
    "travisci": "npm run check",
    "publish-to-npm": "npm install && npm run check && npm publish",
    "combine-coverage": "istanbul-combine -d coverage/combined -r html -r lcov -r json coverage/nodejs/coverage.json coverage/browser/coverage-final.json",
    "generate-requirejs-config": "requirejs-configurator --npm -D -P > test/browser-main.js"
    "generate-validate-bundle": "generate-validate-bundle -m '(?!^.+-factory\\.js$)(?=^.+\\.js$)' -d lib/validators -h resources/bundle-header.txt --recursive --filter lib/main.js"
  },
  "dependencies": {
    "marc-record-js": "^0.1.1",
    "es6-polyfills": "^1.0.1",
    "es6-shims": "^1.1.0",
    "skosmos-api-client": "https://github.com/natlibfi/skosmos-api-client#simplify",
    "marc-record-validate": "https://github.com/natlibfi/marc-record-validate#simplify"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "jshint": "^2.9.4",
    "mock-fs": "^3.12.1",
    "simple-mock": "^0.7.3",
    "mocha": "https://github.com/jRiest/mocha#fix_browser_delay_built",
    "istanbul": "^0.4.5",
    "istanbul-combine": "^0.3.0",
    "requirejs": "^2.3.2",
    "karma": "^1.4.1",
    "karma-mocha": "^1.3.0",
    "karma-requirejs": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-requirejs-preprocessor": "^0.0.2",
    "phantomjs-prebuilt": "^2.1.14",
    "requirejs-configurator": "https://github.com/natlibfi-arlehiko/requirejs-configurator#peer-deps",
    "codeclimate-test-reporter": "^0.4.0"   
    "http-client-x-mock": "^1.0.0"
  }
}
