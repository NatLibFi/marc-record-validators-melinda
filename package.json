{
	"name": "@natlibfi/marc-record-validators-melinda",
	"description": "MARC record validators used in Melinda",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/marc-record-validators-melinda",
	"bugs": {
		"url": "https://github.com/natlibfi/marc-record-validators-melinda/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/marc-record-validators-melinda.git"
	},
	"license": "AGPL-3.0+",
	"version": "2.3.2",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=7"
	},
	"scripts": {
		"prepublishOnly": "npm run build:transpile",
		"check-deps": "npm-check;exit 0",
		"lint": "eslint --fix src",
		"test:unit:base": "cross-env NODE_ENV=test nyc -x src/**/*.spec.js mocha --require babel-core/register",
		"test:unit": "npm run test:unit:base -- src/**/*.spec.js",
		"test": "npm run lint && npm run test:unit && npm run coverage",
		"clean": "rimraf build dist",
		"coverage": "nyc check-coverage",
		"build:transpile": "babel src --source-maps --out-dir=dist --minified",
		"build": "npm run clean && npm run build:transpile && npm run check-deps",
		"watch": "cross-env DEBUG=1 NODE_ENV=test chokidar src -c 'npm test && npm run coverage'",
		"watch:validator": "cross-env DEBUG=1 NODE_ENV=test chokidar src/$VALIDATOR.js src/$VALIDATOR.spec.js -c 'npm run lint src/$VALIDATOR.js src/$VALIDATOR.spec.js && npm run test:unit:base --  src/$VALIDATOR.spec.js && npm run coverage'",
		"publish-to-npm": "npm install && npm test && npm run coverage && npm publish --access=public"
	},
	"dependencies": {
		"@natlibfi/marc-record": "^1.3.2",
		"beautify-isbn": "^2.2.0",
		"cld": "^2.4.8",
		"es6-promisify": "^6.0.0",
		"issn-verify": "^1.0.0",
		"langs": "^2.0.0",
		"lodash": "4.17.10",
		"node-fetch": "^2.1.2",
		"xml2js": ">=0.4.19 <1.0.0"
	},
	"peerDependencies": {
		"@natlibfi/marc-record-validate": "^2.0.0"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-eslint": "^8.2.6",
		"babel-plugin-istanbul": "^4.1.5",
		"babel-plugin-rewire": "^1.1.0",
		"babel-preset-env": "^1.6.1",
		"babel-register": "^6.26.0",
		"chai": "^4.1.2",
		"chai-as-promised": "^7.1.1",
		"chokidar-cli": "^1.2.0",
		"codeclimate-test-reporter": ">=0.5.0 <1.0.0",
		"cross-env": "^5.2.0",
		"eslint": "^5.2.0",
		"eslint-config-xo": ">=0.24.1 <1.0.0",
		"eslint-plugin-import": "^2.13.0",
		"eslint-plugin-mocha": "^5.1.0",
		"mocha": "^5.2.0",
		"npm-check": "^5.7.1",
		"nyc": "^12.0.2",
		"rimraf": "^2.6.2",
		"fetch-mock": "^6.4.4"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		},
		"env": {
			"mocha": true
		}
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"targets": {
						"node": "7"
					}
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"istanbul",
					"rewire"
				]
			}
		}
	},
	"nyc": {
		"reporter": [
			"lcov",
			"html"
		],
		"require": [
			"babel-register"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	}
}
